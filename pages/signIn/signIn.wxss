.main {
  padding: 0;
  margin: 0;
}

.sign-view-title-titleText {
  display: flex;
  justify-content: center;
  align-content: center;
  font-size: 70rpx;
  font-family: Roboto;
  font-weight: 500;
  color: #FF3548;
  opacity: 1;
}

.sign-view-title-text {
  display: flex;
  justify-content: center;
  align-content: center;
  font-size: 40rpx;
  font-family: Roboto;
  font-weight: 300;
  color: #716F87;
  opacity: 1;
  padding-top: 8rpx;
}

.sign-view-image {
  display: flex;
  justify-content: center;
  align-content: center;
  margin-top: 60rpx;
  margin-bottom: 44rpx;
}

.sign-image {
  width: 298rpx;
  height: 298rpx;
  background: rgba(0, 0, 0, 0);
  border-radius: 50%;
}


.sign-view-from-center{
  display: flex;
  justify-content: center;
  align-content: center;
}
.sign-view-buttom{
  margin-bottom: 50rpx;
}
.sign-input {
  width: 598.58rpx;
  height: 92rpx;
  border: 1px solid #E4E4E4;
  border-radius: 73rpx;
  padding-left: 37.42rpx;
}

.sign-button {
  width: 640rpx;
  height: 94rpx;
  background: #D30000;
  border-radius: 54rpx;
  font-family: Roboto;
  font-weight: 500;
  line-height: 58rpx;
  font-size: 28rpx;
  color: #FFFFFF;
}
.sign-button-hover{
  box-shadow:0px 20rpx 80rpx -20rpx #D30000
}

.sign-input-prompt{
  display: flex;
  justify-content: center;
}
.sign-input-text {
  font-size: 30rpx;
  font-family: Roboto;
  font-weight: 500;
  color: #9391A4;
}

.sign-input-navigator {
  font-size: 30rpx;
  font-family: Roboto;
  font-weight: 500;
  color: #23203F;
}